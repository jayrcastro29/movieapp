      <table>
        <thead>
          <tr>
            <th >Title</th>
            <th >Description</th>
            <th >Genre</th>
            <th >Duration</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.title %></td>
              <td><%= movie.description %></td>
              <td><%= movie.genre %></td>
              <td><%= movie.duration %></td>
              <td><%= link_to 'Show', movie %></td>
              <% if admin_signed_in? %>
              <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
              <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %> 
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
              <% if admin_signed_in? %>
                  <%= link_to 'Add Movie', new_movie_path %>
              <% end %>


<% end %>
</div>