<div align="center">
<p id="notice"><%= notice %></p>


<h1>Movies</h1>
<% if !user_signed_in? && !admin_signed_in? %>
  Please log-in to see content.
<% else %>      
  
<%# form_tag moviess_path, :method => 'get' do %>
  <!-- <p>
    <%#= text_field_tag :search, params[:search] %>
    <%#= submit_tag "Search", :title => nil %>
